{{#each groceries as |grocery| }}
<section data-id="{{grocery.id}}" class="justify-content-center">
<table class="table">
  <tbody>
    <h2>{{grocery.name}}</h2>
    <tr>
      <td>Expiration Date</td>
      <td>
        {{#if grocery.date_format}}
        {{grocery.date_format}}
        {{else}}
        No date provided
        {{/if}}
      </td>
    </tr>
    <tr>
      <td>Days Left</td>
      <td>
        {{#if grocery.days_until}}
          {{grocery.days_until}}
        {{/if}}
      </td>
    </tr>
    <tr>
      <td>Quantity</td>
      <td>
        {{#if grocery.quantity}}
          {{grocery.quantity}}
        {{else}}
          No quantity provided
        {{/if}}
      </td>
    </tr>
    <tr>
      <td>Price</td>
      <td>
        {{#if grocery.price}}
          ${{grocery.price}}
        {{else}}
          No price provided
        {{/if}}
      </td>
    </tr>
  </tbody>
</table>
    <div class="w-100"></div>
    <h6 class="col key notes">Notes</h6>
    <div class="w-100"></div>
    <p class="col value">
      {{#if grocery.notes}}
        {{grocery.notes}}
      {{else}}
          No note provided
      {{/if}}
    </p>
    <div class="w-100"></div>
    <div class="row justify-content-center">
      <button class="col btn btn-warning update-grocery" type="button" data-toggle="modal" data-target="#updategroceryModal" data-id="{{grocery.id}}">Update</button>
      <button class="col btn btn-danger delete-grocery" data-id="{{grocery.id}}">Delete</button>
    </div>
  </section>
{{/each}}
